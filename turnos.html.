    <script>
        let horaSeleccionada = "";

        function selectHora(hora) {
            horaSeleccionada = hora;
            // Estilo visual de selecci√≥n
            document.querySelectorAll('.hora-btn').forEach(btn => btn.classList.replace('bg-blue-600', 'bg-slate-100'));
            document.querySelectorAll('.hora-btn').forEach(btn => btn.classList.remove('text-white'));
            event.target.classList.replace('bg-slate-100', 'bg-blue-600');
            event.target.classList.add('text-white');
        }

        function enviarTurno() {
            const servicio = document.getElementById('servicio').value;
            const fecha = document.getElementById('fecha').value;
            
            if(!fecha || !horaSeleccionada) {
                alert("Por favor eleg√≠ fecha y hora");
                return;
            }

            const mensaje = `¬°Hola! Quiero reservar un turno:%0A%0A‚úÇÔ∏è *Servicio:* ${servicio}%0AüìÖ *Fecha:* ${fecha}%0A‚è∞ *Hora:* ${horaSeleccionada}%0A%0AConfirmame si est√° disponible, gracias!`;
            
            window.open(`https://wa.me/541136139401?text=${mensaje}`, '_blank');
        }
    </script>
